# Run the container with `docker run -p 3000:3000 -t job-finder`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system job-finder && \
          adduser --system -G job-finder job-finder

COPY dist/apps/job-finder job-finder/
RUN chown -R job-finder:job-finder .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix job-finder --omit=dev -f install

CMD [ "node", "job-finder" ]
